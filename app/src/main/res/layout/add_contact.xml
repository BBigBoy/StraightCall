<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/contact_user_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/contact_user_img"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/contact_icon"
        fresco:placeholderImageScaleType="centerInside" />

    <LinearLayout
        android:id="@+id/contact_datail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/contact_name"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/new_contact_name" />

        <EditText
            android:id="@+id/contact_telnum"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/new_contact_telnum"
            android:inputType="phone" />

        <Button
            android:id="@+id/add_contact"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/add_btn" />
    </LinearLayout>
</LinearLayout>